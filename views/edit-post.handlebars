<section class="m-5">
  <h3 class="page-title mx-auto">Your Dashboard</h3>
  {{! ------------New Post Form ----------- }}
  <div>
    <h4>Edit Post</h4>
  </div>
  <form class="edit-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <input type="text" name="post-title" value="{{post.title}}" />

    <textarea name="post-textarea">{{post.post_text}}</textarea>

    <button class="edit-btn btn-block" id="edit-btn" type="submit">Update</button>
    <button class="btn-delete btn-danger btn-block" id="btn-delete" type="submit">Delete</button>
  </form>

</section>
{{! ---------New Post Form Ends---------- }}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<html lang="en">

  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../stylesheets/style.css" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <title>Tech Talk</title>
  </head>

  <body>
    <div class="wrapper">
      <div class="content-wrap">
        <header class="header">
          {{! class="header d-inline flex-nowrap justify-content-between align-items-center"
      > }}
          <!-- Navbar -->
          <nav class="navbar navbar-expand-lg bg-white">
            {{! <div class="container-fluid"> }}
            {{! <button
              class="navbar-toggler"
              type="button"
              data-mdb-toggle="collapse"
              data-mdb-target="#navbar"
              aria-controls="navbar"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <i class="fas fa-bars"></i>
            </button> }}

            {{! <div class="collapse navbar-collapse" id="navbar"> }}

            <ul
              class="col-s-8 d-flex flex-nowrap justify-content-center navbar-nav me-auto mb-2 mb-lg-0"
            >

              <li class="nav-item">
                <a
                  class="nav-link d-flex-inline btn"
                  aria-current="page"
                  href="/"
                >Home</a>
              </li>

              {{#if loggedIn}}
                <li class="nav-item">
                  <a
                    class="nav-link d-flex-inline btn"
                    href="/dashboard"
                  >Dashboard</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a
                    class="nav-link d-flex-inline btn"
                    href="/login"
                  >Dashboard</a>
                </li>
              {{/if}}

            </ul>
            {{#if loggedIn}}
              <button
                id="logout-btn"
                class="logout-btn col-md-8 btn-no-style nav-item nav-link d-flex-inline"
              >logout</button>
            {{else}}
              <li class="nav-item">
                <a
                  class="nav-link d-flex-inline login-btn btn"
                  href="/login"
                >Login</a>
              </li>
            {{/if}}

          </nav>
        </header>
        <!-- Navbar -->

        <!-- Background image -->
        <div class="hero p-5 text-center bg-image">

          <div class="mask" style="background-color: rgba(0, 0, 0, 0.8);">
            <div class="d-flex justify-content-center align-items-center">

              <div class="hero-text">
                <h1 class="site-title mb-3">Tech Talk</h1>
                <h4 class="tag-line mb-3">A Blog for Talking Tech</h4>
                {{! <a
                  class="btn btn-outline-light btn-lg"
                  href="#!"
                  role="button"
                >Login</a> }}
              </div>

            </div>
          </div>

        </div>

        <main>
          {{{body}}}
        </main>
      </div>
    </div>
    <footer class="bg-dark text-center footer">
      <!-- Grid container -->
      <div class="container">
        <!--Grid row-->
        <div class="row">

          <!--Grid column-->
          <div class="col-lg-6 col-md-12 mb-md-4 m-xs-0 p-xs-0">
            <p class="text-white footer-text">
              Thank you for visiting!
            </p>
          </div>
          <!--Grid column Ends-->

          <!--Grid column-->
          <div class="col-lg-6 col-md-12 mb-md-4 m-sm-0 p-sm-0">
            <p class="footer-text text-white">Hero Photo by
              <a
                href="https://unsplash.com/@joshsrose?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText"
              >Josh Rose</a>
              on
              <a
                href="https://unsplash.com/s/photos/technology?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText"
              >Unsplash</a>
            </p>
          </div>
          <!--Grid column Ends-->

        </div>
        <!--Grid row Ends-->
      </div>
      <!-- Grid container Ends-->

      <!-- Copyright -->
      <div
        class="footer-text text-center p-3 text-white"
        style="background-color: rgba(0, 0, 0, 0.8);"
      >
        2022:
        <a
          class="text-white mdd"
          href="https://github.com/MellieDee/"
        >MellieDeeDesigns</a>
      </div>
      <!-- Copyright Ends-->
    </footer>
    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>

{{! <script src="../javascript/login.js"></script>
  <script src="/javascript/logout.js"></script> }}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"
></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"
></script>
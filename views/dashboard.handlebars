<section class="m-5">
  <h3 class="page-title mx-auto">Your Dashboard</h3>

  {{! ------------New Post Form ----------- }}
  <div>
    <h4>Write a New Post</h4>
    <form class="new-post-form">
      <div>
        <label hidden for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" placeholder="Title" />
      </div>

      <div>
        <label hidden for="post-text">Write here.</label>
        <textarea name="post-textarea" placeholder="Write here"></textarea>
      </div>

      <div>
        <button class="submit btn-submit" type="submit">Create Post</button>
      </div>
    </form>
  </div>
</section>
{{! ---------New Post Form Ends---------- }}

{{! ---------- User Posts Cards Start ------ }}
<ol class="post-list">
  {{#each postsArr as |post|}}
  <li class="list-item">
    <article class="post">
      <a href="/dashboard/edit/{{id}}" {{!-- href="dashboard/edit/{{post.id}}" --}}
        class="post-title-href">{{title}}</a>

      <div class="meta">Created on
        {{shorten_date created_at}}
        {{!-- <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a> --}}
      </div>
    </article>
  </li>
  {{/each}}
</ol>

{{! ---------- User Posts Cards End ------ }}

<script src="/javascript/add-post.js"></script>
<script src="/javascript/edit-post.js"></script>
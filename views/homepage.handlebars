<ol class="post-list">
  <li>
    <article class="post m-4">
      <div class="post-title p-3 align-items-center">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{post_url}})</span>
      </div>
      <div class="meta">
        {{vote_count}}
        point(s) by
        {{user.username}}
        on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
</ol>